<fieldset class="settings">
	<legend>Settings</legend>
	<div>
		<p>
			<input type="checkbox" switch id="majorAndMinorOnly" value="true">
			<label for="majorAndMinorOnly">Use only major and minor triads</label>
		</p>
		<p>
			<input type="checkbox" switch id="add9s" value="true">
			<label for="add9s">Try add9 as well (both in major &amp; minor)</label>
		</p>

		<wakelock-toggle></wakelock-toggle>

		<p class="themepicker">
			<theme-picker></theme-picker>
		</p>
	</div>
</fieldset>
